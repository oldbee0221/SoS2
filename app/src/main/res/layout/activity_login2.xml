<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="horizontal"
    tools:context="com.mirine.sos2020.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="500dp"
        android:elevation="8dp"
        android:src="@drawable/helper"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#262626"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"

        >




            <LinearLayout
                android:id="@+id/buttons_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#262626"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">


                <ImageButton
                    android:id="@+id/wldlsemdfhrgkwk"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:onClick="wldls123123"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homen"
                    android:padding="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="-45dp"







                />

               <ImageButton
                    android:id="@+id/imageButton12"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:onClick="onButton1Clicked2"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ss1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"







                />


                <ImageButton
                    android:id="@+id/imageButton22"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_alignBottom="@id/imageButton12"
                    android:layout_toRightOf="@id/imageButton12"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:onClick="onButton2Clicked2"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ss3"
                    android:layout_marginTop="-60dp"
                    android:layout_marginBottom="15dp"


             />


                <ImageButton
                    android:id="@+id/imageButton32"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/imageButton12"
                    android:layout_alignRight="@id/imageButton12"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:onClick="onButton3Clicked2"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ss2"
                    android:layout_marginTop="-60dp"
