<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/howto_gradinet"
    tools:context="com.mirine.sos2020.LoginActivity">








    <ImageView
        android:id="@+id/login_iv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/sendsos1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />


    <TextView
        android:id="@+id/main_tv"
        android:textColor="#FF2C57"
        android:fontFamily="@font/gtd8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        android:text="긴 급 사 항 도 우 미"
        android:layout_below="@+id/login_iv"
        android:layout_marginTop="20dp"

        />

    <LinearLayout
        android:id="@+id/main_line1"
        android:layout_below="@+id/main_tv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">
    </LinearLayout>





    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_google"
        android:layout_below="@+id/main_line1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.gms.common.SignInButton>


</RelativeLayout>



